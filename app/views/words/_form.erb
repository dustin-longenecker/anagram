<div class="row">
<% if !@errors.blank? %>
  <p class="alert alert-danger" role="alert">
    <%= "#{@errors}" %>
  </p>
<% end %>


<form action="<%= words_form_action(@word) %>" method="post" id="<%= words_form_id(@word) %>" class="<%= words_form_class(@word) %>">
  <input type="hidden" name="_method" value="<%= words_form_method(@word) %>" />

    <div class="form-group">
      <label for="text">New Word:</label>
      <input type="text" name="text" value="<%= @word.text %>" class="form-control"/>
    </div>

    <div class="button">
      <input type="submit" class="btn btn-primary" />
    </div>
</form>

</div>
